@model EntityLayer.Concrete.Message
@{
    ViewBag.Title = "addNewMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-0">
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li style="margin-top:5px"><i class="fas fa-edit"></i></li>
                    <li style="margin-left:10px"><h1 class="m-0 text-dark"> Contact & Messages </h1></li>
                </ol>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">WebDictionary v1</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>


<div class="row">
    <section class="col-lg-12">
        <!-- Custom tabs (Charts with tabs)-->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-mail-bulk mr-1"></i>
                    Mailbox
                </h3>
                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" style="margin-right:15px">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div><!-- /.card-header -->
            <div class="card-body">
                <section class="content">
                    <div class="row">
                        <div class="col-md-3">
                            @Html.Action("leftMenu", "Contact")
                            <!-- /.card -->
                        </div>
                        <!-- /.col -->
                        <div class="col-md-9">
                            @using (Html.BeginForm("addNewMessage", "Message", FormMethod.Post))
                            {
                                <div class="card card-primary card-outline">
                                    <div class="card-header">
                                        <h3 class="card-title">Compose New Message</h3>
                                    </div>
                                    <!-- /.card-header -->
                                    <div class="card-body">
                                        <div class="form-group">
                                            @Html.TextBoxFor(x => x.ReceiverMail, new { @placeholder = "To:", @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.ReceiverMail, "", new { @style = "color:red" })
                                        </div>
                                        <div class="form-group">
                                            @Html.TextBoxFor(x => x.Subject, new { @placeholder = "Subject:", @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.Subject, "", new { @style = "color:red" })
                                        </div>
                                        <div class="form-group">
                                            @Html.TextAreaFor(model => model.MessageContent, new { @class = "form-control", @id = "compose-textarea", @style = "height: 300px" })
                                            @Html.ValidationMessageFor(x => x.MessageContent, "", new { @style = "color:red" })
                                        </div>
                                        <div class="form-group">
                                            <div class="btn btn-default btn-file">
                                                <i class="fas fa-paperclip"></i> Attachment
                                                <input type="file" name="attachment">
                                            </div>
                                            <p class="help-block">Max. 32MB</p>
                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                    <div class="card-footer">
                                        <div class="float-right">
                                            <button type="submit" class="btn btn-default" name="btnDraft"><i class="fas fa-pencil-alt"></i> Draft</button>
                                            <button type="submit" class="btn btn-primary" name="btnMessage"><i class="far fa-envelope"></i> Send</button>
                                        </div>
                                        <a href="/Contact/Index" class="btn btn-default"><i class="fas fa-times"></i> Discard</a>
                                    </div>
                                    <!-- /.card-footer -->
                                </div>
                            }

                            <!-- /.card -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </section>

            </div>
        </div>
    </section>
</div>


@section scripts {
    <script>
        $(function () {
            //Add text editor
            $('#compose-textarea').summernote()
        })</script>
}