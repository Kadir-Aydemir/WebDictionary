@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Kanit&display=swap');

    table {
        font-family: 'Kanit', sans-serif;
    }
</style>

@Html.Action("AdminPartial", "Authorization")

<!-- INSERT MODAL -->
<div class="modal fade" id="insertmodal">
    <div class="modal-dialog">
        <div class="modal-content" style="color: #383A3E ">
            <div class="modal-header">
                <h4 class="modal-title">
                    <i class="fas fa-plus-circle">
                    </i> Add New Admin
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Index", "Authorization", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.Label("User Mail")
                        @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.AdminUserName, "", new { @style = "color:red" })
                        <br />
                        @Html.Label("Password")
                        @Html.TextBoxFor(x => x.AdminPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.AdminPassword, "", new { @style = "color:red" })
                        <br />
                        @Html.Label("Role")
                        @Html.DropDownListFor(x => x.AdminRole, ViewData["AdminRole"] as SelectList, "Select Role", new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.AdminRole, "", new { @style = "color:red" })
                        <br />
                        <div class="text-right">
                            <button type="submit" class="btn btn-success" name="btnInsert" value="insert" style="margin-top: 10px; background-color: #6F2CF3; border-color: #6F2CF3 ">Add Admin</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- /INSERT MODAL -->
<!-- UPDATE MAIL MODAL -->
<button type="button" style="display:none" data-toggle="modal" data-target="#updatemail" id="btn_modalmail" name="btn_modalmail">
</button>

<div class="modal fade" id="updatemail">
    <div class="modal-dialog">
        <div class="modal-content" style="color: #383A3E ">
            <div class="modal-header">
                <h4 class="modal-title"> <i class="far fa-envelope"></i> Change Mail</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Index", "Authorization", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.Label("User Mail")
                        @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control", @id = "mail1" })
                        @Html.ValidationMessageFor(x => x.AdminUserName, "", new { @style = "color:red" })
                        <br />
                        <p class="text-danger">**If you change your own mail, you will be directed to the login panel to log in again.</p>
                        @Html.HiddenFor(x => x.AdminPassword, new { @id = "password1" })
                        @Html.HiddenFor(x => x.AdminRole, new { @id = "role1" })
                        @Html.HiddenFor(x => x.AdminId, new { @id = "adminid1" })
                        <div class="text-right">
                            <button type="submit" class="btn btn-success" style="margin-top: 10px; background-color: #6F2CF3; border-color: #6F2CF3 " name="btnUpdatemail" value="update">Save Changes</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- /UPDATE MAIL MODAL -->
<!-- UPDATE PASSWORD MODAL -->
<button type="button" style="display:none" data-toggle="modal" data-target="#updatepassword" id="btn_modalpassword" name="btn_modalpassword">
</button>

<div class="modal fade" id="updatepassword">
