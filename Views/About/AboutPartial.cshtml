@model EntityLayer.Concrete.About

<button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#modal-default" id="btn_modal">
    New About
</button>

<div class="modal fade" id="modal-default">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add New About</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("addAbout", "About", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.Label("Detail 1")
                        @Html.TextAreaFor(x => x.Details1, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Details1, "", new { @style = "color:red" })
                        <br />
                        @Html.Label("Detail 2")
                        @Html.TextAreaFor(x => x.Details2, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Details2, "", new { @style = "color:red" })
                        <br />
                        @Html.Label("Image 1")
                        @Html.TextBoxFor(x => x.Image1, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Image1, "", new { @style = "color:red" })
                        <br />
                        @Html.Label("Image 2")
                        @Html.TextBoxFor(x => x.Image2, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Image2, "", new { @style = "color:red" })
                        <br />
                        <button class="btn btn-success" style="margin-top:10px">Add About</button>
                    </div>
                }
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


@if (ViewBag.okay == false)
{
    @section scripts {
        <script>
            $(document).ready(function () {
                $("#btn_modal").click();
                //*ya da
                //$("#btn_1").trigger("click");
            });
        </script>
    }

}