@section scripts {
    <script>
        $(document).on('click', '.delete-skill', function () {
                var id = $(this).data('id');
        var url = '@Url.Action("Delete", "Skill")' + '/' + id;

        Swal.fire({
            title: 'Warning!',
            text: 'Are you sure you want to delete this Skill?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete!',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: 'POST',
                    url: url,
                    success: function() {
                        Swal.fire({
                            title: 'Deleted!',
                            text: 'Skill was deleted successfully.',
                            icon: 'success'
                        }).then((result) => {
                            location.reload();
                        });
                    },
                    error: function() {
                        Swal.fire({
                            title: 'Error!',
                            text: 'An error occurred, the Skill could not be deleted.',
                            icon: 'error'
                        });
                    }
                });
            }
        });
        });
    </script>

    <script>
        $(document).on('click', '.active-skill', function () {
         var id = $(this).data('id');
         var url = '@Url.Action("Delete", "Skill")' + '/' + id;

            if (@ViewBag.count >= 6) {
                Swal.fire({
                    title: 'Warning!',
                    text: 'Activating more than 6 skills is not recommended. Are you sure you want to activate?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Yes, activate!',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            type: 'POST',
                            url: url,
                            success: function () {
                                Swal.fire({
                                    title: 'Activated!',
                                    text: 'Skill was activated successfully.',
                                    icon: 'success'
                                }).then((result) => {
                                    location.reload();
                                });
                            },
                            error: function () {
                                Swal.fire({
                                    title: 'Error!',
                                    text: 'An error occurred, the Skill could not be activated.',
                                    icon: 'error'
                                });
                            }
                        });
                    }
                });
            }
            else {
                $.ajax({
                    type: 'POST',
                    url: url,
                    success: function () {
                        Swal.fire({
                            title: 'Activated!',
                            text: 'Skill was activated successfully.',
                            icon: 'success'
                        }).then((result) => {
                            location.reload();
                        });
                    },
                    error: function () {
                        Swal.fire({
                            title: 'Error!',
                            text: 'An error occurred, the Skill could not be activated.',
                            icon: 'error'
                        });
                    }
                });
            }
        });
    </script>
    <!-- INSERT MODAL -->
    <script>
        $(document).ready(function () {
            $('#insertmodal').on('hidden.bs.modal', function () {
                $(this).removeData('bs.modal');
            });
        });

        function showModal() {

            $('#insertmodal').load('/Skill/Index');
            $('#insertmodal').modal('show');
        }
    </script>
    @if (ViewBag.alert == "true")
    {
        <script>
            $(document).ready(function () {
                $("#btn_modal").click();
            });
        </script>
    }
    @if (ViewBag.insertresult == "true")
    {
        <script>
            $(document).ready(function () {
                Swal.fire({
                    title: 'Added!',
                    text: 'The Skill was added successfully.',
                    icon: 'success'
                }).then(() => {
                    location.href = "/Skill/Index";
                });
            });
        </script>
    }
    <!-- /INSERT MODAL -->
    <!-- UPDATE MODAL -->
    <script>
        $(document).ready(function () {
            $('#updatemodal').on('hidden.bs.modal', function () {
                $(this).removeData('bs.modal');
            });
        });

        $('#updatemodal').on('shown.bs.modal', function () {
            var yUp22 = document.getElementById("valUpdate");
            var skillValue = $('#updatemodal').find('#SkillValueUpdate').val();
            yUp22.innerHTML = skillValue;
        });

        function showModal() {
            $('#updatemodal').load('/Skill/Index');
            $('#updatemodal').modal('show');
        }
    </script>
    <script>
        $(document).on('click', '.update-skill', function () {
                var id = $(this).data('id');
                var url = '@Url.Action("updateSkill", "Skill")' + '/' + id;

                $.ajax({
                    type: 'GET',
                    url: url,
                    dataType: 'json',
                    success: function (data) {
                        $('#updatemodal').find('#SkillID').val(data.SkillID);
                        $('#updatemodal').find('#SkillName').val(data.SkillName);
                        $('#updatemodal').find('#SkillValueUpdate').val(data.SkillValue);
                         //diğer inputlar
                        $("#btn_modalupdate").click();

                        var radioBtn = $('input[name="SkillColor"][value="' + data.SkillColor + '"]');
                        // Radio butonunu kontrol etme
                        radioBtn.prop('checked', true);
                    },
                    error: function (xhr, status, error) {
                        Swal.fire({
                            title: status + '!',
                            text: 'An error occurred, the Skill could not be show.' + error,
                            icon: 'error'
                        });
                    }
                });
        });
    </script>
    @if (ViewBag.updatealert == "true")
    {
        <script>
            $(document).ready(function () {
                $("#btn_modalupdate").click();
            });
        </script>
    }

    @if (ViewBag.updateresult == "true")
    {
        <script>
            $(document).ready(function () {
                Swal.fire({
                    title: 'Updated!',
                    text: 'The Skill was updated successfully.',
                    icon: 'success'
                }).then(() => {
                    location.href = "/Skill/Index";
                });
            });
        </script>
    }
    <!-- /UPDATE MODAL -->

    <script>
        var slidePic = document.getElementById("SkillValueInsert");
        var y = document.getElementById("valInsert");

        slidePic.oninput = function () {
            y.innerHTML = this.value;
        }
    </script>
    <script>
        var slidePicUp = document.getElementById("SkillValueUpdate");
        var yUp = document.getElementById("valUpdate");

        slidePicUp.oninput = function () {
            yUp.innerHTML = this.value;
        }
    </script>
    <script>
        $(document).ready(function () {
            $('#Skill').addClass('active');
        });
    </script>
}


