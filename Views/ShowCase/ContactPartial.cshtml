@model EntityLayer.Concrete.Contact

<div class="contact_grid_right">
    @using (Html.BeginForm("Home", "ShowCase", FormMethod.Post))
    {
        <div class="row contact_left_grid">
            <div class="col-md-6 con-left" data-aos="fade-up">
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Name" })
                    @Html.ValidationMessageFor(x => x.Name, "", new { @style = "color:red" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", placeholder = "Mail" })
                    @Html.ValidationMessageFor(x => x.Mail, "", new { @style = "color:red" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", placeholder = "Subject" })
                    @Html.ValidationMessageFor(x => x.Subject, "", new { @style = "color:red" })
                </div>
            </div>
            <div class="col-md-6 con-right" data-aos="fade-up">
                <div class="form-group">
                    @Html.TextAreaFor(x => x.Message, new { @class = "form-control", placeholder = "Your message" })
                    @Html.ValidationMessageFor(x => x.Message, "", new { @style = "color:red" })
                </div>
            </div>
            <div class="sub-honey mx-auto mt-3">
                <button type="submit" class="btn btn-outline-warning btn-lg" name="btnContact" value="contact">Send</button>
            </div>
        </div>
    }
</div>
