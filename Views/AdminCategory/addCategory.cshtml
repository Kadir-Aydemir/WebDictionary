@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "addCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-0">
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li style="margin-top:5px"><i class="fas fa-th"></i></li>
                    <li style="margin-left:10px"><h1 class="m-0 text-dark"> Categories</h1></li>
                </ol>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">WebDictionary v1</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="row">
    <section class="col-lg-6" style="position: relative; margin: auto;">
        <div class="card bg-gradient-indigo">
            <div class="card-header border-0">
                <h3 class="card-title">
                    <i class="fas fa-th mr-1"></i>
                    Add New Category
                </h3>
                <div class="card-tools">
                    <a href="/AdminCategory/Index" class="btn bg-indigo btn-sm">
                        <i class="fas fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("addCategory", "AdminCategory", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.Label("Category Name")
                        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.CategoryName, "", new { @style = "color:orange" })
                        <br />
                        @Html.Label("Category Description")
                        @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.CategoryDescription, "", new { @style = "color:orange" })
                        <br />
                        <button class="btn btn-outline-light" style="margin-top:10px">Add Category</button>
                    </div>
                }
            </div>
            <!-- /.card-body -->
        </div>
    </section>
</div>
