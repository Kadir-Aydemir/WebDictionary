@section scripts{
    <script>
        const RANDOM = (min, max) => Math.floor(Math.random() * (max - min + 1) + min)
        const PARTICLES = document.querySelectorAll('.star')
        PARTICLES.forEach(P => {
            P.setAttribute('style', `
                                                 --angle: ${RANDOM(0, 360)};
                                                 --duration: ${RANDOM(6, 20)};
                                                 --delay: ${RANDOM(1, 10)};
                                                 --alpha: ${RANDOM(40, 90) / 100};
                                                 --size: ${RANDOM(2, 6)};
                                                 --distance: ${RANDOM(40, 200)};`
            )
        })
    </script>

    <script>
        $(document).ready(function () {
            var checkbox = $('#termsCheckbox');
            var signUpButton = $('#signUpButton');
            var termsValidate = $('#termsvalidate');

            checkbox.on('change', function () {
                signUpButton.prop('disabled', !checkbox.prop('checked'));
                termsValidate.text('');

                if (!checkbox.prop('checked')) {
                    termsValidate.text(' Please agree to the terms of service.');
                }
            });

            signUpButton.on('click', function (e) {
                if (!checkbox.prop('checked')) {
                    e.preventDefault();
                    termsValidate.text('Please agree to the terms of service.');
                }
            });
        });
    </script>

    @if (ViewBag.terms == true)
    {
        <script>
            $(document).ready(function () {
                var termsValidate = $('#termsvalidate');
                termsValidate.text(' Please agree to the terms of service.');
            });
        </script>
    }

    <script>
        function readImageIn(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#ImagePathIn').attr('src', e.target.result);
                    $('#ImagePathIn').show();
                    $('#cancelImagebutton').show();
                    $('.image-container').show();
                }

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
    <script>
        function cancelImageSelection() {
            $('#formFile').val('');
            $('#ImagePathIn').attr('src', '');
            $('#ImagePathIn').hide();
            $('#cancelImagebutton').hide();
            $('.image-container').hide();
        }
    </script>
