@model EntityLayer.Concrete.Contact
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    BusinessLayer.Concrete.WriterManager wm = new BusinessLayer.Concrete.WriterManager(new DataAccessLayer.EntityFramework.EfWriterDal());
    var writercontrol = wm.GetWriterByMailControl(Model.Mail);
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Kanit&display=swap');

    .card {
        font-family: 'Kanit', sans-serif;
        background-color: #181A1F;
        color: #9FA0A2;
        box-shadow: none;
    }
</style>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-0">
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li style="margin-top:5px"><i style="font-size:25px;" class="fas fa-comments"></i></li>
                    <li style="margin-left:10px"><h1 style="font-family: 'Kanit', sans-serif;" class="m-0"> Contact & Messages</h1></li>
                </ol>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">WebDictionary v1</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="row">
    <section class="col-lg-12">
        <!-- Custom tabs (Charts with tabs)-->
        <div class="card" style="background-color: #181A1F; color: #9FA0A2; border-radius: 40px; ">
            <div class="card-header" style="padding:20px;">
                <h3 class="card-title" style="margin-left:15px;">
                    <i class="fas fa-book-reader mr-1"></i>
                    Compose
                </h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" style="margin-right:15px">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div><!-- /.card-header -->
            <div class="card-body">

                <section class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-3">
                                @Html.Action("leftMenu", "Contact")
                                <!-- /.card -->
                            </div>
                            <!-- /.col -->
                            <div class="col-md-9">
                                <div class="card card-primary card-outline">
                                    <div class="card-header">
                                        <h3 class="card-title">Read Mail</h3>
                                    </div>
                                    <!-- /.card-header -->
                                    <div class="card-body p-0">
                                        <div class="mailbox-read-info">
                                            <h4>@Html.DisplayFor(x => x.Subject)</h4>
                                            <h6>
                                                From: @Html.DisplayFor(x => x.Mail)
                                                @if (writercontrol != null)
                                                {
                                                    <span class="badge bg-indigo">member</span>
                                                }
                                                @if (writercontrol == null)
                                                {
                                                    <span class="badge bg-danger">not member</span>
                                                }
                                                <span class="mailbox-read-time float-right">
                                                    @DateTime.Parse(Html.DisplayFor(x => x.ContactDate).ToString()).ToString("dd-MMM-yyyy HH:mm")
                                                </span>
                                            </h6>
                                        </div>
                                        <!-- /.mailbox-read-info -->
                                        <div class="mailbox-controls with-border text-center">
                                            <div class="btn-group">
                                                @if (writercontrol != null)
                                                {
                                                    <a href="/Message/addNewMessage?SenderMail=@Html.DisplayFor(x => x.Mail)" class="btn btn-dark btn-sm" data-toggle="tooltip" data-container="body" title="Reply">
                                                        <i class="fas fa-reply"></i>
                                                    </a>
                                                }
                                                <a href="/Contact/Delete/@Html.DisplayFor(x => x.ID)" class="btn btn-dark btn-sm" data-toggle="tooltip" data-container="body" title="Delete">
                                                    <i class="far fa-trash-alt"></i>
                                                </a>
                                            </div>
                                            <!-- /.btn-group -->
                                        </div>
                                        <!-- /.mailbox-controls -->
                                        <div class="mailbox-read-message">
                                            <p>
                                                @Html.DisplayFor(x => x.Message)
                                            </p>
                                            <b>@Html.DisplayFor(x => x.Name)</b>
                                        </div>
                                        <!-- /.mailbox-read-message -->
                                    </div>
                                    <!-- /.card-body -->
                                    <!-- /.card-footer -->
                                    <div class="card-footer">
                                        <div class="float-right">
                                            @if (writercontrol != null)
                                            {
                                                <a href="/Message/addNewMessage?SenderMail=@Html.DisplayFor(x => x.Mail)" style="background-color: #12A77F; color: white; border: none;" class="btn btn-dark"><i class="fas fa-reply"></i> Reply</a>
                                            }
                                            <a href="/Contact/Delete/@Html.DisplayFor(x => x.ID)" class="btn btn-dark"><i class="far fa-trash-alt"></i> Delete</a>
                                        </div>
                                    </div>
                                    <!-- /.card-footer -->
                                </div>
                                <!-- /.card -->
                            </div>
                            <!-- /.col -->
                        </div>
                    </div>   <!-- /.row -->
                </section>

            </div>
        </div>
    </section>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#Contact').addClass('active');
        });
    </script>
}