<style>
    .home-button {
        color: white;
        background: linear-gradient(to left,#572ADE,#12A77F) padding-box, linear-gradient(to left,#572ADE,#12A77F) border-box;
        border-color: transparent;
        width: auto;
    }
</style>


<a href="/Message/addNewMessage" class="btn btn-dark home-button btn-block mb-3">Create New Message</a>
<div class="card" style="background-color: #181A1F; color: #9FA0A2; ">
    <div class="card-header">
        <h3 class="card-title">Folders</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <ul class="nav nav-pills flex-column">
            <li class="nav-item active">
                <a href="/Contact/Index" class="nav-link">
                    <i class="fas fa-edit"></i> Contact
                    @if (ViewBag.contact > 0)
                    {
                        <span class="badge bg-success float-right">@ViewBag.contact</span>
                    }
                </a>
            </li>
            <li class="nav-item active">
                <a href="/Message/Inbox" class="nav-link">
                    <i class="fas fa-inbox"></i> Inbox
                    @if (ViewBag.inbox > 0)
                    {
                        <span class="badge bg-primary float-right">@ViewBag.inbox</span>
                    }
                </a>
            </li>
            <li class="nav-item">
                <a href="/Message/Sendbox" class="nav-link">
                    <i class="far fa-envelope"></i> Sent
                </a>
            </li>
            <li class="nav-item">
                <a href="/DraftMessage/draftMessage" class="nav-link">
                    <i class="far fa-file-alt"></i> Drafts
                    @if (ViewBag.draft > 0)
                    {
                        <span class="badge bg-warning float-right">@ViewBag.draft</span>
                    }
                </a>
            </li>
            <li class="nav-item">
                <a href="/Contact/Trash" class="nav-link">
                    <i class="far fa-trash-alt"></i> Trash
                    @if (ViewBag.trash > 0)
                    {
                        <span class="badge bg-danger float-right">@ViewBag.trash</span>
                    }
                </a>
            </li>
        </ul>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
