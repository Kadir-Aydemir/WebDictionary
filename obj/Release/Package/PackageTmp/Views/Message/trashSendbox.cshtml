@using System.Text.RegularExpressions;
@using EntityLayer.Concrete
@model List<Message>

@{
    if (Model.Count > 0)
    {
        <div class="card-body p-0">           
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr style="background: linear-gradient(#181A1F,#181A1F) padding-box, linear-gradient(to left,#572ADE,#12A77F) border-box;">
                                <td class="mailbox-star"><a href="#"><i class="fas fa-star text-warning"></i></a></td>
                                <td class="mailbox-name"><a href="/Message/trashMessageDetails/@item.MessageId">@item.ReceiverMail</a></td>
                                <td class="mailbox-subject">
                                    <a style="color: #9FA0A2" href="/Message/trashMessageDetails/@item.MessageId">@item.Subject -</a>
                                    @{ string cleanText = Regex.Replace(item.MessageContent, @"<[^>]*>", string.Empty);}
                                    @if (cleanText.Length + item.Subject.Length <= 50)
                                    {
                                        <a style="color: #9FA0A2" href="/Message/trashMessageDetails/@item.MessageId">@cleanText</a>}
                                    @if (cleanText.Length + item.Subject.Length > 50)
                                    {
                                        int sub = 50 - item.Subject.Length;
                                        <a style="color: #9FA0A2" href="/Message/trashMessageDetails/@item.MessageId">@cleanText.Substring(0, sub)...</a>
                                    }
                                </td>
                                @*<td class="mailbox-attachment"><i class="fas fa-paperclip"></i></td>*@
                                <td><a href="/Message/trashMessageDelete/@item.MessageId" class="btn btn-dark btn-sm"><i class="far fa-trash-alt"></i></a></td>
                                <td class="mailbox-date">
                                    @if (item.MessageDate.Day == DateTime.Now.Day)
                                    {
                                        @(((DateTime)item.MessageDate).ToString("HH:mm"))
                                    }
                                    @if (item.MessageDate.Day != DateTime.Now.Day)
                                    {
                                        @(((DateTime)item.MessageDate).ToString("dd MMM"))
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- /.table -->
            </div>
            <!-- /.mail-box-messages -->
        </div>
        <!-- /.card-body -->
        <div class="card-footer p-0">            
        </div>
    }
    else
    {
        <div style="text-align:center"><h3 style="margin-block:15px"><i class="fas fa-search-location"></i> No deleted data found</h3></div>
    }

}
