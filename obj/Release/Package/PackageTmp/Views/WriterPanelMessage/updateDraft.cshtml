@model EntityLayer.Concrete.DraftMessage
@{
    ViewBag.Title = "updateDraft";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Kanit&display=swap');

    .card {
        font-family: 'Kanit', sans-serif;
        background-color: #181A1F;
        color: #9FA0A2;
        box-shadow: none;
    }


    .form-group {
        font-family: 'Kanit', sans-serif;
        margin-bottom: 30px;
        padding-inline: 25px;
    }

        .form-group .form-control {
            color: #9FA0A2;
            border: 2px solid #0000;
            border-radius: 8px;
            background: linear-gradient(#181A1F,#181A1F) padding-box, linear-gradient(to left,#572ADE,#12A77F) border-box;
        }

            .form-group .form-control:hover {
                background: linear-gradient(#181A1F,#181A1F) padding-box, linear-gradient(to left,#12A77F,#12A77F) border-box;
            }
</style>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-0">
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li style="margin-top:5px"><i style="font-size:25px;" class="fas fa-comments"></i></li>
                    <li style="margin-left:10px"><h1 style="font-family: 'Kanit', sans-serif;" class="m-0"> Messages</h1></li>
                </ol>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">WebDictionary v1</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>


<div class="row">
    <section class="col-lg-12">
        <!-- Custom tabs (Charts with tabs)-->
        <div class="card" style="background-color: #181A1F; color: #9FA0A2; border-radius: 40px;">
            <div class="card-header" style="padding:20px;">
                <h3 class="card-title" style="margin-left:15px;">
                    <i class="fas fa-mail-bulk mr-1"></i>
                    Mailbox
                </h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" style="margin-right:15px">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div><!-- /.card-header -->
            <div class="card-body">
                <section class="content">
                    <div class="row">
                        <div class="col-md-3">
                            @Html.Action("leftMenu", "WriterPanelMessage")
                            <!-- /.card -->
                        </div>
                        <!-- /.col -->
                        <div class="col-md-9">
                            @using (Html.BeginForm("updateDraft", "WriterPanelMessage", FormMethod.Post))
                            {
                                <div class="card card-primary card-outline" style="background-color: #181A1F; color: #9FA0A2;">
                                    <div class="card-header">
                                        <h3 class="card-title">Edit Draft Message</h3>
                                    </div>
                                    <!-- /.card-header -->
                                    <div class="card-body">
                                        <div class="form-group">
                                            @Html.TextBoxFor(x => x.DraftReceiverMail, new { @placeholder = "To:", @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.DraftReceiverMail, "", new { @style = "color:red;font-size:12px;" })
                                        </div>
                                        <div class="form-group">
                                            @Html.TextBoxFor(x => x.DraftSubject, new { @placeholder = "Subject:", @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.DraftSubject, "", new { @style = "color:red;font-size:12px;" })
                                        </div>
                                        <div class="form-group">
                                            @Html.TextAreaFor(model => model.DraftMessageContent, new { @class = "form-control", @id = "compose-textarea", @style = "height: 300px" })
                                            @Html.ValidationMessageFor(x => x.DraftMessageContent, "", new { @style = "color:red;font-size:12px;" })
                                        </div>
                                        @Html.HiddenFor(x => x.DraftSenderMail)
                                        @Html.HiddenFor(x => x.DraftMessageDate)
                                        @Html.HiddenFor(x => x.DraftMessageId)
                                    </div>
                                    <!-- /.card-body -->
                                    <div class="card-footer">                                       
                                        <div class="form-group">
                                            <div class="float-right">
                                                <button style="background-color: #572ADE; color: white; border: none;" type="submit" name="btnDraft" value="draft" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Save Draft</button>
                                                <button style="background-color: #12A77F; color: white; border: none;" type="submit" name="btnMessage" value="send" class="btn btn-primary"><i class="far fa-envelope"></i> Send</button>
                                            </div>
                                            <a href="/WriterPanelMessage/draftMessage" class="btn btn-dark"><i class="fas fa-times"></i> Discard</a>
                                        </div>
                                    </div>
                                    <!-- /.card-footer -->
                                </div>
                            }
                            <!-- /.card -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </section>

            </div>
        </div>
    </section>
</div>


@section scripts {
    <script>
        $(function () {
            //Add text editor
            $('#compose-textarea').summernote()
        })
    </script>
    <script>
        $(document).ready(function () {
            $('#Message').addClass('active');
        });
    </script>
}





