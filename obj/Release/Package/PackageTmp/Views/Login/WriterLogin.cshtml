
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>WebDictionary Writer Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" type="image/x-icon" href="~/Resources/dictionaryLogo.png">
    <script src="https://www.google.com/recaptcha/api.js"></script>

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/login-form-07/fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/login-form-07/css/owl.carousel.min.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/login-form-07/css/bootstrap.min.css">
    <!-- Style -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/login-form-07/css/style.css">
</head>

<body>
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <img src="~/AdminLTE-3.0.4/login-form-07/images/undraw_remotely_2j6y.svg" alt="Image" class="img-fluid">
                </div>
                <div class="col-md-6 contents">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="mb-4">
                                <h3>Log In</h3>
                                <p class="mb-4">Welcome to WebDictionary Writer Login</p>
                            </div>
                            @using (Html.BeginForm("WriterLogin", "Login", FormMethod.Post))
                            {
                                <div class="form-group first">
                                    <label for="username">Username</label>
                                    <input id="username" type="text" name="WriterMail" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <input id="password" name="WriterPassword" type="password" class="form-control" required>
                                </div>
                                if (TempData["Message"] != null || TempData["validate"] != null)
                                {
                                    <div class="form-group">
                                        <div class="g-recaptcha" data-sitekey="6LfotoglAAAAAHjHl9K6DBXmlk9ZOojTEkfWvCNj"></div>
                                    </div>
                                    <div class="form-group last mb-4">
                                        <label style="color:red"> @TempData["Message"]</label>
                                        <label style="color: red"> @TempData["validate"]</label>
                                    </div>
                                }
                                else
                                {
                                    <div class="form-group last mb-4">
                                        <div class="g-recaptcha" data-sitekey="6LfotoglAAAAAHjHl9K6DBXmlk9ZOojTEkfWvCNj"></div>
                                    </div>
                                }
                                <div class="d-flex mb-5 align-items-center" style="margin-top:15px;">
                                    <label class="control control--checkbox mb-0">
                                        <span class="caption">Remember me</span>
                                        <input type="checkbox" name="RememberMe" id="RememberMe" value="true" />
                                        <div class="control__indicator"></div>
                                    </label>
                                    @*<span class="ml-auto"><a href="#" class="forgot-pass" style="text-decoration: none;">Forgot Password</a></span>*@
                                </div>

                                <button type="submit" class="btn btn-block btn-primary">Log In</button>

                                @*<span class="d-block text-left my-4 text-muted">&mdash; or login with &mdash;</span>*@

                                @*<div class="social-login">
                                        <a href="#" class="facebook">
                                            <span class="icon-facebook mr-3"></span>
                                        </a>
                                        <a href="#" class="twitter">
                                            <span class="icon-twitter mr-3"></span>
                                        </a>
                                        <a href="#" class="google">
                                            <span class="icon-google mr-3"></span>
                                        </a>
                                    </div>*@
                            }
                        <div class="row" style="display:flex;justify-content:center;margin-top:20px;">
                            <a href="/DictionaryPanel/Index" style="text-decoration: none;">Return to Home Page</a>
                        </div>
                           
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>

    <script src="~/AdminLTE-3.0.4/login-form-07/js/jquery-3.3.1.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-07/js/popper.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-07/js/bootstrap.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-07/js/main.js"></script>
</body>
</html>


